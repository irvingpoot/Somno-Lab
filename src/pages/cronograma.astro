---
// src/pages/cronograma.astro
import Layout from '../layouts/Layout.astro';
---

<Layout title="SOMNOMID - Cronograma">
    <div class="min-h-screen bg-[#F8FAFC] py-12 px-4 sm:px-6 flex flex-col items-center">
        
        <div class="w-full max-w-5xl space-y-12">
            
            <div class="text-center space-y-3 animate-fade-in-down">
                <h1 class="text-4xl md:text-5xl font-bold text-gray-800 tracking-tight">
                    Diseña tu <span class="text-[#3F74FB]">Descanso</span>
                </h1>
                <p class="text-gray-500 text-lg max-w-2xl mx-auto font-light">
                    Ajuste su reloj biológico paso a paso.
                </p>
            </div>

            <div class="bg-white rounded-3xl shadow-[0_20px_50px_rgba(8,112,184,0.07)] p-8 md:p-12 border border-gray-100 relative overflow-hidden">
                <div class="absolute top-0 right-0 -mr-16 -mt-16 w-64 h-64 rounded-full bg-blue-50 opacity-50 blur-3xl pointer-events-none"></div>

                <form id="edad-hora" class="relative z-10 grid grid-cols-1 md:grid-cols-3 gap-8 items-end">
                    <div class="group">
                        <label for="edad" class="block text-sm font-semibold text-gray-600 mb-2 ml-1">Tu Edad</label>
                        <input type="number" id="edad" name="edad" required placeholder="Ej. 24"
                            class="w-full bg-gray-50 text-gray-800 text-lg font-medium border-0 rounded-2xl p-4 focus:ring-2 focus:ring-[#3F74FB]/30 focus:bg-white transition-all shadow-sm placeholder-gray-400" />
                    </div>

                    <div class="group">
                        <label for="horaDespertar" class="block text-sm font-semibold text-gray-600 mb-2 ml-1">Hora Deseada</label>
                        <input type="time" id="horaDespertar" name="horaDespertar" required
                            class="w-full bg-gray-50 text-gray-800 text-lg font-medium border-0 rounded-2xl p-4 focus:ring-2 focus:ring-[#3F74FB]/30 focus:bg-white transition-all shadow-sm text-center" />
                    </div>
                    
                    <div class="group">
                        <label for="hora" class="block text-sm font-semibold text-gray-600 mb-2 ml-1">Hora Actual</label>
                        <input type="time" id="hora" name="hora" required
                            class="w-full bg-gray-50 text-gray-800 text-lg font-medium border-0 rounded-2xl p-4 focus:ring-2 focus:ring-[#3F74FB]/30 focus:bg-white transition-all shadow-sm text-center" />
                    </div>
                </form>

                <div class="mt-10 flex justify-center">
                    <button id="submit-btn" class="bg-[#3F74FB] text-white text-lg font-semibold py-4 px-12 rounded-full shadow-lg shadow-blue-500/30 hover:shadow-blue-500/50 hover:bg-blue-600 transition-all transform hover:scale-105 active:scale-95">
                        Calcular mi Cronograma
                    </button>
                </div>
            </div>

            <div class="container-crono space-y-8">
                <h3 id="titulo-crono" class="text-2xl md:text-3xl font-semibold text-center text-gray-800 min-h-12"></h3>
                
                <div class="crono grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-4 gap-6"></div>
            </div>

        </div>
    </div>

    <div id="modal" class="hidden fixed inset-0 z-50 items-center justify-center bg-gray-900/60 backdrop-blur-sm p-4 transition-all duration-300">
        <div class="bg-white rounded-3xl shadow-2xl w-full max-w-sm overflow-hidden animate-fade-in-up">
            
            <div class="p-8 text-center">
                <div class="mx-auto flex h-16 w-16 items-center justify-center rounded-full bg-blue-50 mb-6">
                    <i class="fas fa-info text-2xl text-[#3F74FB]"></i>
                </div>
                
                <h3 class="text-xl font-bold text-gray-900 mb-2">Aviso</h3>
                <p id="modal-message" class="text-gray-500 text-sm leading-relaxed"></p>
            </div>

            <div class="bg-gray-50 px-6 py-4 flex gap-3">
                <button id="close-modal-btn" class="flex-1 bg-[#3F74FB] text-white font-semibold py-3 px-4 rounded-xl hover:bg-blue-600 transition-colors">
                    Entendido
                </button>
                <button id="close-btn" class="px-4 text-gray-400 hover:text-gray-600 font-medium">
                    Cerrar
                </button>
            </div>
        </div>
    </div>
</Layout>

<script src="../scripts/scriptCrono.js"></script>

<style>
    @keyframes fadeInUp {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
    }
    .animate-fade-in-up {
        animation: fadeInUp 0.4s ease-out forwards;
    }
    .animate-fade-in-down {
        animation: fadeInUp 0.6s ease-out forwards;
    }
</style>