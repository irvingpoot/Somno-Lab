---
import Layout from '../layouts/Layout.astro';
import BackButton from '../components/BackButton.astro';

const horas = Array.from({ length: 24 }, (_, i) => i.toString().padStart(2, '0'));

---

<Layout title="SOMNOMID - Cronograma">
    <div class="min-h-screen bg-slate-50 py-12 px-4 sm:px-6 flex flex-col items-center relative overflow-hidden">
        
        <div class="absolute top-0 right-0 -translate-y-1/4 translate-x-1/4 w-[800px] h-[800px] bg-somno-dark/10 rounded-full blur-[120px] pointer-events-none"></div>
        <div class="absolute bottom-0 left-0 translate-y-1/4 -translate-x-1/4 w-[600px] h-[600px] bg-somno/10 rounded-full blur-[100px] pointer-events-none"></div>

        <div class="w-full max-w-5xl space-y-8 relative z-10">
            
            <div class="flex justify-start px-2 animate-fade-in-down" style="animation-delay: 0.1s;">
                <BackButton href="/" label="Volver al inicio" />
            </div>

            <div class="text-center space-y-3 animate-fade-in-down">
                <h1 class="text-4xl md:text-5xl font-bold text-gray-800 tracking-tight">
                    Cronoterapia del <span class="text-somno">sueño</span>
                </h1>
                <p class="text-somno text-lg max-w-2xl mx-auto font-light">
                    Ajuste su reloj biológico paso a paso.
                </p>
            </div>

            <div class="bg-white rounded-3xl shadow-[0_20px_50px_rgba(8,112,184,0.07)] p-8 md:p-12 border border-gray-100 relative overflow-hidden">
                <div class="absolute top-0 right-0 -mr-16 -mt-16 w-64 h-64 rounded-full bg-blue-50 opacity-50 blur-3xl pointer-events-none"></div>

                <form id="edad-hora" class="relative z-10 grid grid-cols-1 md:grid-cols-3 gap-8 items-end">
                    <div class="group">
                        <label for="edad" class="block text-sm font-semibold text-somno-dark mb-2 ml-1">Tu Edad</label>
                        <input type="number" id="edad" name="edad" required placeholder="Ej. 24"
                            class="w-full p-4 bg-slate-50 border border-slate-200 rounded-xl appearance-none outline-none focus:ring-2 focus:ring-somno/20 focus:border-somno font-bold text-slate-700" />
                    </div>

                    <div>
                        <label class="block text-sm font-semibold text-somno-dark mb-2 ml-1">Hora de dormir actual</label>
                        <div class="flex gap-2 items-center">
                            <div class="relative w-2/3">
                                <select id="dormir-h" class="w-full p-4 bg-slate-50 border border-slate-200 rounded-xl appearance-none outline-none focus:ring-2 focus:ring-somno/20 focus:border-somno font-bold text-slate-400">
                                    <option value="" disabled selected>Hora</option>
                                    {horas.map(h => <option class="text-slate-800" value={h}>{h}</option>)}
                                </select>
                                <div class="absolute inset-y-0 right-4 flex items-center pointer-events-none text-somno"><i class="fas fa-chevron-down"></i></div>
                            </div>
                            
                            <span class="text-xl font-bold text-slate-400">:</span>

                            <div class="relative w-1/3">
                                <select id="dormir-m" class="w-full p-4 bg-slate-50 border border-slate-200 rounded-xl appearance-none outline-none focus:ring-2 focus:ring-somno/20 focus:border-somno font-bold text-slate-400">
                                    <option class="text-slate-800" value="00">00</option>
                                    <option class="text-slate-800" value="30">30</option>
                                </select>
                                <div class="absolute inset-y-0 right-4 flex items-center pointer-events-none text-somno"><i class="fas fa-chevron-down"></i></div>
                            </div>
                        </div>
                    </div>

                    <div>
                        <label class="block text-sm font-semibold text-somno-dark mb-2 ml-1">Hora a la que desea despertar</label>
                        <div class="flex gap-2 items-center">
                            <div class="relative w-2/3">
                                <select id="despertar-h" class="w-full p-4 bg-slate-50 border border-slate-200 rounded-xl appearance-none outline-none focus:ring-2 focus:ring-somno/20 focus:border-somno font-bold text-slate-400">
                                    <option value="" disabled selected>Hora</option>
                                    {horas.map(h => <option class="text-slate-800" value={h}>{h}</option>)}
                                </select>
                                <div class="absolute inset-y-0 right-4 flex items-center pointer-events-none text-somno"><i class="fas fa-chevron-down"></i></div>
                            </div>

                            <span class="text-xl font-bold text-slate-400">:</span>

                            <div class="relative w-1/3">
                                <select id="despertar-m" class="w-full p-4 bg-slate-50 border border-slate-200 rounded-xl appearance-none outline-none focus:ring-2 focus:ring-somno/20 focus:border-somno font-bold text-slate-400">
                                    <option class="text-slate-800" value="00">00</option>
                                    <option class="text-slate-800" value="30">30</option>
                                </select>
                                <div class="absolute inset-y-0 right-4 flex items-center pointer-events-none text-somno"><i class="fas fa-chevron-down"></i></div>
                            </div>
                        </div>
                    </div>
                </form>

                <div class="mt-10 flex justify-center">
                    <button id="submit-btn" class="bg-somno text-white text-lg font-semibold py-4 px-12 rounded-full shadow-lg shadow-blue-500/30 hover:shadow-blue-500/50 hover:bg-somno-light transition-all transform hover:scale-105 active:scale-95">
                        Calcular mi Cronograma
                    </button>
                </div>
            </div>

            <div class="container-crono space-y-8">
                <h3 id="titulo-crono" class="text-2xl md:text-3xl font-semibold text-center text-gray-800 min-h-8"></h3>
                
                <div class="crono grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-4 gap-6">
                    <div class="border-2 border-dashed border-slate-200 rounded-3xl p-6 flex flex-col items-center justify-center text-slate-300 min-h-[140px] animate-pulse">
                        <i class="fas fa-calendar-day text-2xl mb-2 opacity-50"></i>
                        <span class="text-sm font-medium">Día 1</span>
                    </div>
                    <div class="border-2 border-dashed border-slate-200 rounded-3xl p-6 flex flex-col items-center justify-center text-slate-300 min-h-[140px] animate-pulse" style="animation-delay: 0.1s">
                        <i class="fas fa-calendar-day text-2xl mb-2 opacity-50"></i>
                        <span class="text-sm font-medium">Día 2</span>
                    </div>
                    <div class="border-2 border-dashed border-slate-200 rounded-3xl p-6 flex flex-col items-center justify-center text-slate-300 min-h-[140px] animate-pulse" style="animation-delay: 0.2s">
                        <i class="fas fa-calendar-day text-2xl mb-2 opacity-50"></i>
                        <span class="text-sm font-medium">Día 3</span>
                    </div>
                    <div class="border-2 border-dashed border-slate-200 rounded-3xl p-6 flex flex-col items-center justify-center text-slate-300 min-h-[140px] animate-pulse" style="animation-delay: 0.3s">
                        <i class="fas fa-ellipsis-h text-2xl mb-2 opacity-50"></i>
                        <span class="text-sm font-medium">...</span>
                    </div>
                </div>
            </div>

        </div>
    </div>

    <div id="modal" class="hidden fixed inset-0 z-50 items-center justify-center bg-gray-900/60 backdrop-blur-sm p-4 transition-all duration-300">
        <div class="bg-white rounded-3xl shadow-2xl w-full max-w-sm overflow-hidden animate-fade-in-up">
            <div class="p-8 text-center">
                <div class="mx-auto flex h-16 w-16 items-center justify-center rounded-full bg-blue-50 mb-6">
                    <i class="fas fa-info text-2xl text-somno"></i>
                </div>
                <h3 class="text-xl font-bold text-gray-900 mb-2">Aviso</h3>
                <p id="modal-message" class="text-gray-500 text-sm leading-relaxed"></p>
            </div>
            <div class="bg-gray-50 px-6 py-4 flex gap-3">
                <button id="close-modal-btn" class="flex-1 bg-somno text-white font-semibold py-3 px-4 rounded-xl hover:bg-somno-light transition-colors">
                    Entendido
                </button>
                <button id="close-btn" class="px-4 text-gray-400 hover:text-gray-600 font-medium">
                    Cerrar
                </button>
            </div>
        </div>
    </div>

    <div id="toast" class="fixed bottom-8 left-1/2 transform -translate-x-1/2 bg-slate-800/90 backdrop-blur text-white px-6 py-3 rounded-full shadow-2xl shadow-slate-500/20 opacity-0 translate-y-10 transition-all duration-500 pointer-events-none z-50 flex items-center gap-3 border border-slate-700/50">
        <div class="w-6 h-6 rounded-full bg-[#3F74FB] flex items-center justify-center shrink-0">
            <i class="fas fa-check text-xs text-white"></i>
        </div>
        <span id="toast-message" class="text-sm font-medium tracking-wide">Mensaje del sistema</span>
    </div>

</Layout>

<script src="../scripts/scriptCrono.js"></script>

<style>
    @keyframes fadeInUp { from { opacity: 0; transform: translateY(20px); } to { opacity: 1; transform: translateY(0); } }
    .animate-fade-in-up { animation: fadeInUp 0.4s ease-out forwards; }
    .animate-fade-in-down { animation: fadeInUp 0.6s ease-out forwards; }
</style>