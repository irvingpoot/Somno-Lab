---
interface Props {
	href?: string;
	label?: string;
}

const { href = '/', label = 'Volver al inicio' } = Astro.props;
---

<a href={href} 
    class="inline-flex items-center gap-3 text-slate-500 hover:text-[#3F74FB] transition-all duration-300 group font-medium no-underline">
    <div class="w-10 h-10 bg-white rounded-full shadow-[0_2px_8px_rgba(0,0,0,0.05)] border border-slate-100 flex items-center justify-center group-hover:border-blue-100 group-hover:shadow-md group-hover:scale-105 transition-all">
        <i class="fas fa-arrow-left text-sm transition-transform duration-300 group-hover:-translate-x-0.5"></i>
    </div>
    
    <span class="group-hover:translate-x-1 transition-transform duration-300">{label}</span>
</a>